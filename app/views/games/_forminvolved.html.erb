<%= form_with(model: involved_company, class: "flex flex-column gap-4") do |form| %>
  <div class="flex gap-4 mb-2">
    <div class="select">
      <%= form.label :game_id, class:"content-xs overline"%>
      <%= form.collection_select :game_id, Game.all, :id, :name, { prompt: true }, { class: "select__input" } %>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="select">
      <%= form.label :company_id, class:"content-xs overline"%>
      <%= form.collection_select :company_id, Company.all, :id, :name, { prompt: true }, { class: "select__input" } %>
    </div>
  </div>

  <div>
    <p class="mb-1">Involvement:</p>
    <div class="checkbox__opt-group">
      <div class="checkbox">
        <%= form.check_box :developer, class: "checkbox__input" %>
        <div class="checkbox__text-container">
          <%= form.label :developer, class:"content-sm"%>
        </div>
      </div>
      <div class="checkbox">
        <%= form.check_box :publisher, class: "checkbox__input" %>
        <div class="checkbox__text-container">
          <%= form.label :publisher, class:"content-sm"%>
        </div>
      </div>
    </div>
  </div>

  <%= form.submit class: "button button--primary fit-content" %>

<% end %>
